<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head')%>
</head>
<body>


  <%- include('../partials/nav') %>

  <div class="container mt-3">

    <div class="row">
      <div class="col-md-12 mt-3">
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th style="width: 50px;">id</th>
              <th style="width: 150px;">rolename</th>
              <th>count of users</th>
              <th style="width: 130px;"></th>
            </tr>
          </thead>
          <tbody>
            <% roles.forEach(role => { %>
              <tr>
                <td><%= role.id %></td>
                <td>
                  <%= role.rolename %>
                </td>
                <td><%= role.user_count %></td>
                <td>
                  <a href="/admin/roles/<%= role.id %>" class="btn btn-sm btn-primary">edit</a>
                  <a href="/admin/role/delete/<%= role.id %>" class="btn btn-sm btn-danger">delete</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script>
    const div = document.getElementById('queryString')

    setTimeout(() => {
      div.style.display  = 'none'
    },2000)
  </script>
</body>
</html>

