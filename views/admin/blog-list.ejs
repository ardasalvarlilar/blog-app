<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head')%>
</head>
<body>


  <%- include('../partials/nav') %>

  <div class="container mt-3">

    <% if (action === 'edit') { %>
      <div id="queryString" class="alert alert-primary text-center" role="alert">
        <h3><%= blogid %> id numaralı blog başarıyla güncellendi</h3>
      </div>
    <% } else if (action === 'delete') { %>
      <div id="queryString" class="alert alert-danger text-center" role="alert">
        <h3>blog başarıyla silindi</h3>
      </div>
    <% } else if (action === 'create') { %>
      <div id="queryString" class="alert alert-success text-center" role="alert">
        <h3>blog başarıyla eklendi</h3>
      </div>
    <% } %>


    <div class="row">
      <div class="col-md-12 mt-3">
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th style="width: 50px;">id</th>
              <th style="width: 150px;">resim</th>
              <th>başlık</th>
              <th>kategory</th>
              <th style="width: 130px;"></th>
            </tr>
          </thead>
          <tbody>
            <% blogs.forEach(blog => { %>
              <tr>
                <td><%= blog.id %></td>
                <td>
                  <img src="/static/images/<%= blog.image %>" alt="<%= blog.title %>" class="img-fluid">
                </td>
                <td><%= blog.title %></td>
                <td>
                  <% blog.categories.forEach(category => { %>
                    <p><%= category.name %></p>
                  <% }) %>
                </td>
                <td>
                  <a href="/admin/blogs/<%= blog.id %>" class="btn btn-sm btn-primary">edit</a>
                  <a href="/admin/blog/delete/<%= blog.id %>" class="btn btn-sm btn-danger">delete</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script>
    const div = document.getElementById('queryString')

    setTimeout(() => {
      div.style.display  = 'none'
    },2000)
  </script>
</body>
</html>

